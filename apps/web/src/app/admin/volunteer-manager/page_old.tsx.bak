'use client';

import { useState, useEffect } from 'react';
import Link from 'next/link';
import { useRouter } from 'next/navigation';

interface Event {
  id: number;
  slug: string;
  title: string;
  description: string | null;
  is_active: boolean;
  event_date: string | null;
  begin_date: string | null;
  end_date: string | null;
  is_template: boolean;
  template_id: number | null;
  auto_extend: boolean;
}

interface List {
  id: number;
  event_id: number;
  title: string;
  description: string | null;
  max_slots: number | null;
  is_locked: boolean;
  signup_count?: number;
}

export default function VolunteerManagerPage() {
  const router = useRouter();
  const [events, setEvents] = useState<Event[]>([]);
  const [selectedEvent, setSelectedEvent] = useState<Event | null>(null);
  const [lists, setLists] = useState<List[]>([]);
  const [loading, setLoading] = useState(true);
  const [showEventModal, setShowEventModal] = useState(false);
  const [showListModal, setShowListModal] = useState(false);
  const [editingList, setEditingList] = useState<List | null>(null);
  const [editingEvent, setEditingEvent] = useState<Event | null>(null);
  const [expandedTemplates, setExpandedTemplates] = useState<Set<number>>(new Set());

  // Form states
  const [eventForm, setEventForm] = useState({
    slug: '',
    title: '',
    description: '',
    event_date: '',
    begin_date: '',
    end_date: '',
    is_active: true,
    is_template: false,
    auto_extend: false,
  });

  const [listForm, setListForm] = useState({
    title: '',
    description: '',
    max_slots: '',
    is_locked: false,
  });

  useEffect(() => {
    checkAuth();
  }, []);

  const checkAuth = async () => {
    try {
      const response = await fetch('/api/auth/session');
      const session = await response.json();
      if (!session || !session.user) {
        router.push('/signin');
        return;
      }
      fetchEvents();
    } catch (error) {
      router.push('/signin');
    }
  };

  const fetchEvents = async () => {
    try {
      const response = await fetch('/api/admin/events');
      if (response.ok) {
        const data = await response.json();
        setEvents(data);
        if (data.length > 0 && !selectedEvent) {
          selectEvent(data[0]);
        }
      }
    } catch (error) {
      console.error('Error fetching events:', error);
    } finally {
      setLoading(false);
    }
  };

  const selectEvent = async (event: Event) => {
    setSelectedEvent(event);
    // Fetch lists for this event
    try {
      const response = await fetch(`/api/signup/${event.slug}`);
      if (response.ok) {
        const data = await response.json();
        setLists(data.lists || []);
      }
    } catch (error) {
      console.error('Error fetching lists:', error);
    }
  };

  const generateSlug = (title: string) => {
    return title
      .toLowerCase()
      .replace(/[^a-z0-9]+/g, '-')
      .replace(/^-+|-+$/g, '');
  };

  const handleTitleChange = (title: string) => {
    setEventForm({ 
      ...eventForm, 
      title,
      slug: generateSlug(title)
    });
  };

  const handleCreateEvent = async (e: React.FormEvent) => {
    e.preventDefault();
    try {
      const url = editingEvent ? '/api/admin/events' : '/api/admin/events';
      const method = editingEvent ? 'PATCH' : 'POST';
      const body = editingEvent 
        ? { id: editingEvent.id, ...eventForm }
        : eventForm;

      const response = await fetch(url, {
        method,
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(body),
      });

      if (response.ok) {
        setShowEventModal(false);
        setEditingEvent(null);
        setEventForm({ slug: '', title: '', description: '', event_date: '', begin_date: '', end_date: '', is_active: true, is_template: false, auto_extend: false });
        await fetchEvents();
      } else {
        const data = await response.json();
        alert(data.error || `Failed to ${editingEvent ? 'update' : 'create'} event`);
      }
    } catch (error) {
      alert(`Error ${editingEvent ? 'updating' : 'creating'} event`);
    }
  };

  const handleCreateList = async (e: React.FormEvent) => {
    e.preventDefault();
    if (!selectedEvent) return;

    try {
      const response = await fetch('/api/admin/lists', {
        method: editingList ? 'PATCH' : 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          ...(editingList && { id: editingList.id }),
          eventId: selectedEvent.id,
          title: listForm.title,
          description: listForm.description,
          max_slots: listForm.max_slots ? parseInt(listForm.max_slots) : null,
          is_locked: listForm.is_locked,
        }),
      });

      if (response.ok) {
        setShowListModal(false);
        setEditingList(null);
        setListForm({ title: '', description: '', max_slots: '', is_locked: false });
        await selectEvent(selectedEvent);
      } else {
        const data = await response.json();
        alert(data.error || 'Failed to save list');
      }
    } catch (error) {
      alert('Error saving list');
    }
  };

  const handleDeleteList = async (listId: number) => {
    if (!confirm('Delete this list and all signups? This cannot be undone.')) return;

    try {
      const response = await fetch('/api/admin/lists', {
        method: 'DELETE',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ id: listId }),
      });

      if (response.ok && selectedEvent) {
        await selectEvent(selectedEvent);
      }
    } catch (error) {
      alert('Error deleting list');
    }
  };

  const handleToggleLock = async (list: List) => {
    try {
      const response = await fetch('/api/admin/lists', {
        method: 'PATCH',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          id: list.id,
          is_locked: !list.is_locked,
        }),
      });

      if (response.ok && selectedEvent) {
        await selectEvent(selectedEvent);
      }
    } catch (error) {
      alert('Error updating list');
    }
  };

  const openEditList = (list: List) => {
    setEditingList(list);
    setListForm({
      title: list.title,
      description: list.description || '',
      max_slots: list.max_slots?.toString() || '',
      is_locked: list.is_locked,
    });
    setShowListModal(true);
  };

  const handleGenerateSundays = async () => {
    if (!selectedEvent) return;

    const weeksInput = prompt('How many Sundays to generate?', '4');
    if (!weeksInput) return;

    const weeks = parseInt(weeksInput);
    if (isNaN(weeks) || weeks < 1 || weeks > 52) {
      alert('Please enter a number between 1 and 52');
      return;
    }

    try {
      const response = await fetch('/api/admin/generate-sundays', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ templateId: selectedEvent.id, weeks }),
      });

      if (response.ok) {
        const data = await response.json();
        alert(data.message || 'Sundays generated successfully!');
        await fetchEvents();
        // Auto-expand the template to show generated instances
        setExpandedTemplates(prev => new Set(prev).add(selectedEvent.id));
      } else {
        const data = await response.json();
        alert(data.error || 'Failed to generate Sundays');
      }
    } catch (error) {
      alert('Error generating Sundays');
    }
  };

  const openEditEvent = () => {
    if (!selectedEvent) return;
    setEditingEvent(selectedEvent);
    setEventForm({
      slug: selectedEvent.slug,
      title: selectedEvent.title,
      description: selectedEvent.description || '',
      event_date: selectedEvent.event_date || '',
      begin_date: selectedEvent.begin_date || '',
      end_date: selectedEvent.end_date || '',
      is_active: selectedEvent.is_active,
      is_template: selectedEvent.is_template,
      auto_extend: selectedEvent.auto_extend || false,
    });
    setShowEventModal(true);
  };

  const handleDeleteEvent = async () => {
    if (!selectedEvent) return;
    if (!confirm(`Delete "${selectedEvent.title}" and all its lists? This cannot be undone.`)) return;

    try {
      const response = await fetch('/api/admin/events', {
        method: 'DELETE',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ id: selectedEvent.id }),
      });

      if (response.ok) {
        await fetchEvents();
        setSelectedEvent(null);
      } else {
        alert('Failed to delete event');
      }
    } catch (error) {
      alert('Error deleting event');
    }
  };

  const handleDuplicateEvent = async () => {
    if (!selectedEvent) return;

    try {
      const response = await fetch('/api/admin/duplicate-event', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ eventId: selectedEvent.id }),
      });

      if (response.ok) {
        const data = await response.json();
        alert(`Event duplicated successfully!`);
        await fetchEvents();
        // Select the newly created event
        const newEvent = events.find(e => e.id === data.event.id);
        if (newEvent) {
          selectEvent(newEvent);
        }
      } else {
        const data = await response.json();
        alert(data.error || 'Failed to duplicate event');
      }
    } catch (error) {
      alert('Error duplicating event');
    }
  };

  const formatEventDate = (event: Event) => {
    if (event.is_template) {
      if (event.begin_date) {
        const beginDate = new Date(event.begin_date).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
        return `From ${beginDate}`;
      }
      return 'Template (not generated yet)';
    } else if (event.event_date) {
      return new Date(event.event_date).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
    }
    return '';
  };

  const toggleTemplate = (templateId: number) => {
    setExpandedTemplates(prev => {
      const next = new Set(prev);
      if (next.has(templateId)) {
        next.delete(templateId);
      } else {
        next.add(templateId);
      }
      return next;
    });
  };

  const getGroupedEvents = () => {
    const templates: Event[] = [];
    const standalone: Event[] = [];
    const byTemplate: Record<number, Event[]> = {};

    events.forEach(event => {
      if (event.is_template) {
        templates.push(event);
        byTemplate[event.id] = [];
      } else if (event.template_id) {
        if (!byTemplate[event.template_id]) {
          byTemplate[event.template_id] = [];
        }
        byTemplate[event.template_id].push(event);
      } else {
        standalone.push(event);
      }
    });

    // Sort instances by date (most recent first)
    Object.values(byTemplate).forEach(instances => {
      instances.sort((a, b) => {
        if (!a.event_date || !b.event_date) return 0;
        return new Date(b.event_date).getTime() - new Date(a.event_date).getTime();
      });
    });

    return { templates, byTemplate, standalone };
  };

  if (loading) {
    return <div className="p-8">Loading...</div>;
  }

  return (
    <div className="min-h-screen bg-gray-50">
      {/* Header */}
      <nav className="bg-white shadow-sm">
        <div className="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <div className="flex h-16 justify-between items-center">
            <div className="flex items-center gap-4">
              <Link href="/dashboard" className="text-blue-600 hover:text-blue-500">
                ‚Üê Dashboard
              </Link>
              <h1 className="text-xl font-bold">Volunteer Manager</h1>
            </div>
            <button
              onClick={() => setShowEventModal(true)}
              className="rounded-md bg-blue-600 px-4 py-2 text-sm font-semibold text-white hover:bg-blue-500"
            >
              + New Event
            </button>
          </div>
        </div>
      </nav>

      <main className="mx-auto max-w-7xl px-4 py-8 sm:px-6 lg:px-8">
        <div className="grid grid-cols-1 lg:grid-cols-4 gap-6">
          {/* Events Sidebar */}
          <div className="lg:col-span-1">
            <div className="rounded-lg bg-white p-4 shadow">
              <h2 className="font-semibold text-gray-900 mb-4">Events</h2>
              <div className="space-y-1">
                {(() => {
                  const { templates, byTemplate, standalone } = getGroupedEvents();
                  
                  return (
                    <>
                      {/* Templates with nested instances */}
                      {templates.map((template) => {
                        const instances = byTemplate[template.id] || [];
                        const isExpanded = expandedTemplates.has(template.id);
                        
                        return (
                          <div key={template.id}>
                            {/* Template */}
                            <div className="flex items-center gap-1">
                              {instances.length > 0 && (
                                <button
                                  onClick={() => toggleTemplate(template.id)}
                                  className="p-1 hover:bg-gray-100 rounded"
                                >
                                  <span className="text-xs">{isExpanded ? '‚ñº' : '‚ñ∂'}</span>
                                </button>
                              )}
                              <button
                                onClick={() => selectEvent(template)}
                                className={`flex-1 text-left px-3 py-2 rounded-md text-sm ${
                                  selectedEvent?.id === template.id
                                    ? 'bg-blue-100 text-blue-700 font-medium'
                                    : 'hover:bg-gray-100'
                                }`}
                              >
                                <div className="flex flex-col gap-0.5">
                                  <div className="flex items-center gap-1">
                                    <span>üìã</span>
                                    {template.auto_extend && <span title="Auto-extends weekly">üîÑ</span>}
                                    <span className="font-medium">{template.title}</span>
                                    {instances.length > 0 && (
                                      <span className="text-xs text-gray-500">({instances.length})</span>
                                    )}
                                  </div>
                                  {formatEventDate(template) && (
                                    <span className="text-xs text-gray-600">
                                      {formatEventDate(template)}
                                    </span>
                                  )}
                                </div>
                              </button>
                            </div>
                            
                            {/* Nested instances */}
                            {isExpanded && instances.map((instance) => (
                              <div key={instance.id} className="ml-6 flex items-center gap-1">
                                <button
                                  onClick={() => selectEvent(instance)}
                                  className={`flex-1 text-left px-3 py-2 rounded-md text-sm ${
                                    selectedEvent?.id === instance.id
                                      ? 'bg-blue-100 text-blue-700 font-medium'
                                      : 'hover:bg-gray-100'
                                  }`}
                                >
                                  <div className="flex flex-col gap-0.5">
                                    <div className="flex items-center gap-1">
                                      {instance.auto_extend && <span title="Auto-extends weekly">üîÑ</span>}
                                      <span className="font-medium">{instance.title}</span>
                                    </div>
                                    {formatEventDate(instance) && (
                                      <span className="text-xs text-gray-600">
                                        {formatEventDate(instance)}
                                      </span>
                                    )}
                                  </div>
                                </button>
                              </div>
                            ))}
                          </div>
                        );
                      })}
                      
                      {/* Standalone events (no template) */}
                      {standalone.map((event) => (
                        <div key={event.id} className="flex items-center gap-1">
                          <button
                            onClick={() => selectEvent(event)}
                            className={`flex-1 text-left px-3 py-2 rounded-md text-sm ${
                              selectedEvent?.id === event.id
                                ? 'bg-blue-100 text-blue-700 font-medium'
                                : 'hover:bg-gray-100'
                            }`}
                          >
                            <div className="flex flex-col gap-0.5">
                              <div className="flex items-center gap-1">
                                {event.auto_extend && <span title="Auto-extends weekly">üîÑ</span>}
                                <span className="font-medium">{event.title}</span>
                              </div>
                              {formatEventDate(event) && (
                                <span className="text-xs text-gray-600">
                                  {formatEventDate(event)}
                                </span>
                              )}
                            </div>
                          </button>
                        </div>
                      ))}
                      
                      {events.length === 0 && (
                        <p className="text-sm text-gray-500">No events yet</p>
                      )}
                    </>
                  );
                })()}
              </div>
            </div>
          </div>

          {/* Lists Panel */}
          <div className="lg:col-span-3">
            {selectedEvent ? (
              <div className="rounded-lg bg-white p-6 shadow">
                <div className="flex items-center justify-between mb-6">
                  <div className="flex-1">
                    <div className="flex items-center gap-2">
                      <h2 className="text-2xl font-bold text-gray-900">
                        {selectedEvent.title}
                      </h2>
                      <button
                        onClick={openEditEvent}
                        className="text-xs px-2 py-1 bg-gray-100 text-gray-700 rounded hover:bg-gray-200"
                      >
                        Edit
                      </button>
                      <button
                        onClick={handleDuplicateEvent}
                        className="text-xs px-2 py-1 bg-blue-100 text-blue-700 rounded hover:bg-blue-200"
                      >
                        Duplicate
                      </button>
                      <button
                        onClick={handleDeleteEvent}
                        className="text-xs px-2 py-1 bg-red-100 text-red-700 rounded hover:bg-red-200"
                      >
                        Delete
                      </button>
                    </div>
                    {!selectedEvent.is_template && (
                      <div className="flex items-center gap-2 mt-1">
                        <span className="text-sm text-gray-600">Public URL:</span>
                        <a
                          href={`/signup/${selectedEvent.slug}`}
                          target="_blank"
                          rel="noopener noreferrer"
                          className="text-sm text-blue-600 hover:text-blue-500 hover:underline"
                        >
                          {typeof window !== 'undefined' 
                            ? `${window.location.origin}/signup/${selectedEvent.slug}`
                            : `/signup/${selectedEvent.slug}`}
                        </a>
                        <button
                          onClick={() => {
                            const url = `${window.location.origin}/signup/${selectedEvent.slug}`;
                            navigator.clipboard.writeText(url);
                            alert('URL copied to clipboard!');
                          }}
                          className="text-xs px-2 py-1 bg-gray-100 text-gray-700 rounded hover:bg-gray-200"
                        >
                          Copy
                        </button>
                      </div>
                    )}
                    {selectedEvent.is_template && (
                      <div className="mt-2 bg-blue-50 border border-blue-200 rounded-md p-3">
                        <p className="text-sm text-blue-800">
                          üìã This is a template. Use "Generate Sundays" to create actual events that volunteers can sign up for.
                        </p>
                      </div>
                    )}
                    {selectedEvent.description && (
                      <p className="text-sm text-gray-700 mt-2">
                        {selectedEvent.description}
                      </p>
                    )}
                  </div>
                  <div className="flex gap-2">
                    {selectedEvent.is_template && (
                      <button
                        onClick={handleGenerateSundays}
                        className="rounded-md bg-green-600 px-4 py-2 text-sm font-semibold text-white hover:bg-green-500"
                      >
                        üìÖ Generate Sundays
                      </button>
                    )}
                    <button
                      onClick={() => setShowListModal(true)}
                      className="rounded-md bg-blue-600 px-4 py-2 text-sm font-semibold text-white hover:bg-blue-500"
                    >
                      + Add List
                    </button>
                  </div>
                </div>

                {/* Lists */}
                <div className="space-y-4">
                  {lists.map((list) => (
                    <div
                      key={list.id}
                      className="border border-gray-200 rounded-lg p-4 hover:border-gray-300"
                    >
                      <div className="flex items-start justify-between">
                        <div className="flex-1">
                          <div className="flex items-center gap-2">
                            <h3 className="font-semibold text-gray-900">
                              {list.title}
                            </h3>
                            {list.is_locked && (
                              <span className="text-xs bg-red-100 text-red-700 px-2 py-1 rounded">
                                üîí Locked
                              </span>
                            )}
                            {list.max_slots && (
                              <span className="text-xs bg-blue-100 text-blue-700 px-2 py-1 rounded">
                                {list.signup_count || 0}/{list.max_slots} slots
                              </span>
                            )}
                          </div>
                          {list.description && (
                            <p className="text-sm text-gray-600 mt-1">
                              {list.description}
                            </p>
                          )}
                        </div>
                        <div className="flex items-center gap-2">
                          <button
                            onClick={() => handleToggleLock(list)}
                            className={`text-xs px-3 py-1 rounded ${
                              list.is_locked
                                ? 'bg-red-100 text-red-700 hover:bg-red-200'
                                : 'bg-green-100 text-green-700 hover:bg-green-200'
                            }`}
                          >
                            {list.is_locked ? 'Unlock' : 'Lock'}
                          </button>
                          <button
                            onClick={() => openEditList(list)}
                            className="text-xs px-3 py-1 rounded bg-gray-100 text-gray-700 hover:bg-gray-200"
                          >
                            Edit
                          </button>
                          <button
                            onClick={() => handleDeleteList(list.id)}
                            className="text-xs px-3 py-1 rounded bg-red-100 text-red-700 hover:bg-red-200"
                          >
                            Delete
                          </button>
                        </div>
                      </div>
                    </div>
                  ))}
                  {lists.length === 0 && (
                    <p className="text-center text-gray-500 py-8">
                      No volunteer lists yet. Click "Add List" to create one.
                    </p>
                  )}
                </div>
              </div>
            ) : (
              <div className="rounded-lg bg-white p-6 shadow text-center text-gray-500">
                Select an event to manage its volunteer lists
              </div>
            )}
          </div>
        </div>
      </main>

      {/* Event Modal */}
      {showEventModal && (
        <div className="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50">
          <div className="bg-white rounded-lg p-6 max-w-md w-full">
            <h3 className="text-lg font-semibold mb-4">{editingEvent ? 'Edit Event' : 'Create New Event'}</h3>
            <form onSubmit={handleCreateEvent} className="space-y-4">
              <div>
                <label className="block text-sm font-medium text-gray-700 mb-1">
                  Title
                </label>
                <input
                  type="text"
                  required
                  value={eventForm.title}
                  onChange={(e) => handleTitleChange(e.target.value)}
                  className="w-full border border-gray-300 rounded-md px-3 py-2 text-gray-900"
                  placeholder="Sunday Service - January 2025"
                />
              </div>
              <div className="flex items-center mb-4">
                <input
                  type="checkbox"
                  id="is_template"
                  checked={eventForm.is_template}
                  onChange={(e) =>
                    setEventForm({ ...eventForm, is_template: e.target.checked, event_date: e.target.checked ? '' : eventForm.event_date })
                  }
                  className="mr-2"
                />
                <label htmlFor="is_template" className="text-sm font-medium text-gray-700">
                  This is a recurring template (generate multiple dates)
                </label>
              </div>
              {eventForm.is_template ? (
                <div>
                  <label className="block text-sm font-medium text-gray-700 mb-1">
                    Start Generating From <span className="text-xs text-gray-500">(optional)</span>
                  </label>
                  <input
                    type="date"
                    value={eventForm.begin_date}
                    onChange={(e) =>
                      setEventForm({ ...eventForm, begin_date: e.target.value })
                    }
                    className="w-full border border-gray-300 rounded-md px-3 py-2 text-gray-900"
                  />
                  <p className="text-xs text-gray-500 mt-1">
                    Leave empty to start from today. You'll specify how many Sundays when you click "Generate Sundays".
                  </p>
                </div>
              ) : (
                <>
                  <div>
                    <label className="block text-sm font-medium text-gray-700 mb-1">
                      Date
                    </label>
                    <input
                      type="date"
                      required
                      value={eventForm.event_date}
                      onChange={(e) =>
                        setEventForm({ ...eventForm, event_date: e.target.value })
                      }
                      className="w-full border border-gray-300 rounded-md px-3 py-2 text-gray-900"
                    />
                  </div>
                  <div className="flex items-center">
                    <input
                      type="checkbox"
                      id="auto_extend"
                      checked={eventForm.auto_extend}
                      onChange={(e) =>
                        setEventForm({ ...eventForm, auto_extend: e.target.checked })
                      }
                      className="mr-2"
                    />
                    <label htmlFor="auto_extend" className="text-sm text-gray-700">
                      Auto-extend weekly (automatically create next week's event 7 days later)
                    </label>
                  </div>
                </>
              )}
              <div>
                <label className="block text-sm font-medium text-gray-700 mb-1">
                  URL Slug <span className="text-gray-500 text-xs">(auto-generated)</span>
                </label>
                <input
                  type="text"
                  required
                  value={eventForm.slug}
                  onChange={(e) =>
                    setEventForm({ ...eventForm, slug: e.target.value })
                  }
                  className="w-full border border-gray-300 rounded-md px-3 py-2 text-gray-900 bg-gray-50"
                  placeholder="sunday-jan-2025"
                />
                <p className="text-xs text-gray-500 mt-1">
                  You can edit this if needed
                </p>
              </div>
              <div>
                <label className="block text-sm font-medium text-gray-700 mb-1">
                  Description (optional)
                </label>
                <textarea
                  value={eventForm.description}
                  onChange={(e) =>
                    setEventForm({ ...eventForm, description: e.target.value })
                  }
                  className="w-full border border-gray-300 rounded-md px-3 py-2 text-gray-900"
                  rows={3}
                />
              </div>
              <div className="flex gap-2 justify-end">
                <button
                  type="button"
                  onClick={() => setShowEventModal(false)}
                  className="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 rounded-md hover:bg-gray-200"
                >
                  Cancel
                </button>
                <button
                  type="submit"
                  className="px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-md hover:bg-blue-500"
                >
                  {editingEvent ? 'Update Event' : 'Create Event'}
                </button>
              </div>
            </form>
          </div>
        </div>
      )}

      {/* List Modal */}
      {showListModal && (
        <div className="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50">
          <div className="bg-white rounded-lg p-6 max-w-md w-full">
            <h3 className="text-lg font-semibold mb-4">
              {editingList ? 'Edit List' : 'Create New List'}
            </h3>
            <form onSubmit={handleCreateList} className="space-y-4">
              <div>
                <label className="block text-sm font-medium text-gray-700 mb-1">
                  Title
                </label>
                <input
                  type="text"
                  required
                  value={listForm.title}
                  onChange={(e) =>
                    setListForm({ ...listForm, title: e.target.value })
                  }
                  className="w-full border border-gray-300 rounded-md px-3 py-2 text-gray-900"
                  placeholder="Greeters"
                />
              </div>
              <div>
                <label className="block text-sm font-medium text-gray-700 mb-1">
                  Description (optional)
                </label>
                <textarea
                  value={listForm.description}
                  onChange={(e) =>
                    setListForm({ ...listForm, description: e.target.value })
                  }
                  className="w-full border border-gray-300 rounded-md px-3 py-2 text-gray-900"
                  rows={2}
                />
              </div>
              <div>
                <label className="block text-sm font-medium text-gray-700 mb-1">
                  Max Slots (optional)
                </label>
                <input
                  type="number"
                  value={listForm.max_slots}
                  onChange={(e) =>
                    setListForm({ ...listForm, max_slots: e.target.value })
                  }
                  className="w-full border border-gray-300 rounded-md px-3 py-2 text-gray-900"
                  placeholder="Leave empty for unlimited"
                />
              </div>
              <div className="flex items-center">
                <input
                  type="checkbox"
                  id="is_locked"
                  checked={listForm.is_locked}
                  onChange={(e) =>
                    setListForm({ ...listForm, is_locked: e.target.checked })
                  }
                  className="mr-2"
                />
                <label htmlFor="is_locked" className="text-sm text-gray-700">
                  Lock list (prevent public edits)
                </label>
              </div>
              <div className="flex gap-2 justify-end">
                <button
                  type="button"
                  onClick={() => {
                    setShowListModal(false);
                    setEditingList(null);
                    setListForm({
                      title: '',
                      description: '',
                      max_slots: '',
                      is_locked: false,
                    });
                  }}
                  className="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 rounded-md hover:bg-gray-200"
                >
                  Cancel
                </button>
                <button
                  type="submit"
                  className="px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-md hover:bg-blue-500"
                >
                  {editingList ? 'Update' : 'Create'}
                </button>
              </div>
            </form>
          </div>
        </div>
      )}
    </div>
  );
}
